{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "rootDir": "./packages",
    "noImplicitThis": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "lib": [
      "esnext",
      "dom"
    ],
  },
  "exclude": [
    "node_modules",
    "packages/**/__tests__/*"
  ],
  "include": [
    "packages/**/*"
  ]
}